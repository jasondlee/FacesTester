<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              metadata-complete="true"
              version="2.0">
    <application>
        <view-handler>org.jboss.weld.jsf.ConversationAwareViewHandler</view-handler>
    </application>

    <lifecycle>
        <phase-listener>org.jboss.weld.jsf.WeldPhaseListener</phase-listener>
    </lifecycle>

    <factory>
        <application-factory>com.steeplesoft.jsf.facestester.weld.WeldApplicationFactory</application-factory>
    </factory>
</faces-config>