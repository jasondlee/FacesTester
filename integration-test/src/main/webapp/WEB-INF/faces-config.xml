<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
              version="1.2">

    <application>
        <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
    </application>

    <managed-bean>
        <managed-bean-name>ZipCodeMapperPage</managed-bean-name>
        <managed-bean-class>com.steeplesoft.jsf.sample.ZipCodeMapperPage</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>jpaBean</managed-bean-name>
        <managed-bean-class>com.steeplesoft.jsf.sample.ManagedBeanWithJpa</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>prePost</managed-bean-name>
        <managed-bean-class>com.steeplesoft.jsf.sample.PrePostBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <navigation-rule>
        <from-view-id>/zipCodeMapper.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/zipCodeMapper.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>
