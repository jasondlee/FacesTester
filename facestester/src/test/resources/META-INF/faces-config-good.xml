<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
              version="1.2">
    <application>
        <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
    </application>

    <managed-bean>
        <managed-bean-name>goodBean</managed-bean-name>
        <managed-bean-class>com.steeplesoft.jsf.facestester.GoodBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <component>
        <display-name>TestComponent</display-name>
        <component-type>com.steeplesoft.jsf.facestester.TestComponent</component-type>
        <component-class>com.steeplesoft.jsf.facestester.TestComponent</component-class>
    </component>
    <render-kit>
        <renderer>
            <component-family>com.steeplesoft.jsf.facestester.TestComponent</component-family>
            <renderer-type>com.steeplesoft.jsf.facestester.TestComponent</renderer-type>
            <renderer-class>com.steeplesoft.jsf.facestester.TestRenderer</renderer-class>
        </renderer>
    </render-kit>
</faces-config>